# This file contains the fastlane.tools configuration
# You can find the documentation at https://docs.fastlane.tools
#
# For a list of all available actions, check out
#
#     https://docs.fastlane.tools/actions
#
# For a list of all available plugins, check out
#
#     https://docs.fastlane.tools/plugins/available-plugins
#

# Uncomment the line if you want fastlane to automatically update itself
# update_fastlane

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    ensure_git_status_clean
    increment_build_number(xcodeproj: "iMast.xcodeproj")

    version = get_version_number(xcodeproj: "iMast.xcodeproj", target: "iMast") + "b" + get_build_number(xcodeproj: "iMast.xcodeproj")
    git_commit(path: ["./*/Info.plist", "./iMast.xcodeproj/project.pbxproj"], message: ":rocket: " + version)
    add_git_tag(tag: version)
    push_to_git_remote

    build_app(workspace: "iMast.xcworkspace", scheme: "iMast")
    upload_to_testflight(skip_waiting_for_build_processing: true)
  end

  lane :nightly do
    ensure_git_status_clean
    increment_build_number(xcodeproj: "iMast.xcodeproj")

    version = get_version_number(xcodeproj: "iMast.xcodeproj", target: "iMast") + "b" + get_build_number(xcodeproj: "iMast.xcodeproj")
    git_commit(path: ["./*/Info.plist", "./iMast.xcodeproj/project.pbxproj"], message: ":rocket: " + version)
    add_git_tag(tag: version)
    push_to_git_remote

    sync_code_signing
    build_app(workspace: "iMast.xcworkspace", scheme: "iMast")
    upload_to_testflight(skip_waiting_for_build_processing: true)
  end
end
